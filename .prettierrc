{
  "printWidth": 88,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react",
    "^next/*",
    "^../(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@/widgets/*",
    "^@/features/*",
    "^@/entities/*",
    "^@/shared/*",
    "^@/shared/ui/*"
  ],
  "importOrderSeparation": true
}
